<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE JobConfiguration PUBLIC "" "JobConfig.dtd" [
  <!ENTITY NEVT "-1">
  <!ENTITY PRESELdir "/nfs/dust/cms/user/mameyer/TTDMDM/PU-reweighting/">
  <!ENTITY TTbarDMJets_EFT_M-200 SYSTEM "../../common/datasets/MC_TTbarDMJets_EFT_M-200.xml">
  <!ENTITY TTbar SYSTEM "../../common/datasets/MC_TTbar.xml">
  <!ENTITY Data SYSTEM "../../common/datasets/DATA_SingleMu.xml">

]>

<JobConfiguration JobName="ExampleCycleJob" OutputLevel="INFO">
    <Library Name="libTestSUHH2common"/>
   
   <Cycle Name="uhh2::AnalysisModuleRunner" OutputDirectory="&PRESELdir;/" PostFix="" TargetLumi="1" >

   
      <InputData Lumi="1" NEventsMax="&NEVT;" Type="Data" Version="Data" Cacheable="False">
          &Data;
          <InputTree Name="AnalysisTree" />
        </InputData>

        
         <InputData Lumi="1" NEventsMax="&NEVT;" Type="MC" Version="TTbarDMJets_EFT_M-200" Cacheable="False">
          &TTbarDMJets_EFT_M-200;
          <InputTree Name="AnalysisTree" />
        </InputData>

          
         <InputData Lumi="1" NEventsMax="&NEVT;" Type="MC" Version="TTbar" Cacheable="False">
          &TTbar;
          <InputTree Name="AnalysisTree" />
        </InputData>     


        <UserConfig>
            <Item Name="PrimaryVertexCollection" Value="offlineSlimmedPrimaryVertices" />
            <Item Name="ElectronCollection" Value="slimmedElectronsUSER" />
            <Item Name="MuonCollection" Value="slimmedMuonsUSER" />
            <Item Name="TauCollection" Value="slimmedTaus" />
            <Item Name="JetCollection" Value="slimmedJets" />
            <Item Name="GenJetCollection" Value="slimmedGenJets" /> 
            <Item Name="METName" Value="slimmedMETs" />
            <Item Name="TopJetCollection" Value="slimmedJetsAK8_CMSTopTag" />
           <Item Name="GenParticleCollection" Value="GenParticles" /> 

            <Item Name="use_sframe_weight" Value="false" />
            <Item Name="AnalysisModule" Value="TestPUReweighting" />
        </UserConfig>

    </Cycle>
</JobConfiguration>
